@model LoginUser

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
          <div class="col-md-6">
           <fieldset class="border p-4 rounded shadow">




            
        <legend class="w-auto px-2">Login</legend>
            <form asp-action="Login" asp-controller="Home" method="post" >
            <div class="mb-3">
                    <label asp-for="LoginEmail" class="form-label">Email</label>
                    <input asp-for="LoginEmail" class="form-control">
                    <span asp-validation-for="LoginEmail" class="text-danger"></span>
                </div>
            <div class="mb-3">
                    <label asp-for="LoginPassword" class="form-label">Password:</label>
                    <input asp-for="LoginPassword" class="form-control">
                    <span asp-validation-for="LoginPassword" class="text-danger"></span>
                </div>
            
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </fieldset>
        </div>
        </div>

    </div>

</body>
</html>
